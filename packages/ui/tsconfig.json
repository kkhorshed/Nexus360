{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node", "react", "react-dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/**/*.css", "src/types/*.d.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../utils" },
    { "path": "../api-client" }
  ]
}
